# app shortcuts
hyper - return : open -n -a Alacritty


rcmd + rshift + ralt + rctrl - r : yabai -m space --rotate 270

# focus windows (on current space and monitor)
rcmd + rshift + ralt + rctrl - h : yabai -m window --focus west
rcmd + rshift + ralt + rctrl - j : yabai -m window --focus south
rcmd + rshift + ralt + rctrl - k : yabai -m window --focus north
rcmd + rshift + ralt + rctrl - l : yabai -m window --focus east

# swap windows (on current space and monitor)
rcmd + rshift + ralt + rctrl + lcmd - h : yabai -m window --swap west
rcmd + rshift + ralt + rctrl + lcmd - j : yabai -m window --swap south
rcmd + rshift + ralt + rctrl + lcmd - k : yabai -m window --swap north
rcmd + rshift + ralt + rctrl + lcmd - l : yabai -m window --swap east

# focus other monitor
rcmd + rshift + ralt + rctrl + lshift - h : yabai -m display --focus next
rcmd + rshift + ralt + rctrl + lshift - l : yabai -m display --focus prev


# send window to monitor and follow focus (my second monitor is to the left of the main monitor, so invert next/prev)
rcmd + rshift + ralt + rctrl + lcmd + lshift - h : yabai -m window --display next; yabai -m display --focus next
rcmd + rshift + ralt + rctrl + lcmd + lshift - l : yabai -m window --display prev; yabai -m display --focus prev

rcmd + rshift + ralt + rctrl - f : yabai -m window --toggle zoom-fullscreen
rcmd + rshift + ralt + rctrl + lcmd - f : yabai -m window --toggle float --grid 4:4:1:1:2:2
